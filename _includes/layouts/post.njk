---
layout: layouts/base.njk
templateClass: tmpl-post
---

<div class="post-wrapper">
  <div class="post-body">
    <div class="post-header">
      <h1>{{ title }}</h1>
      <h4>By <a href="{{ first_author_page | url }}">{{ first_author }}</a>
      <h4>{{ date | htmlDateString }}<h4>
    </div>
    <article>
      {{ content | safe }}
    </article>
  </div>
</div>

<p><a href="{{ '/' | url }}">‚Üê Home</a></p>
